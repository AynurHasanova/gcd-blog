<h1>Edit Blog Post</h1>
{{#if errorMsg }}
	<p>{{{errorMsg}}}</p>
{{/if}}
{{#if blog}}
	<form action="/blogs/{{blog._id}}?_method=PUT" method="POST">
		<input type="hidden" id="id" name="id" value="{{blog._id}}">
		<label for="title">Title:</label>
		<input type="text" id="title" name="title" value="{{blog.title}}"/><br />
		<label for="body">Content:</label>
		<input type="text" id="body" name="body" value="{{blog.body}}" /><br />
		<input type="submit" value="Submit" > <br/><br/>
	</form>
{{/if}}

<br />
<a href="/blogs">List of blog posts</a>