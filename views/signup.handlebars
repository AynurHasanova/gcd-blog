    {{#if message }}
        <div class="ui negative message transition hidden">
            <i class="close icon"></i>
            <div class="header">
                {{message}}
            </div>
        </div>
    {{/if}}
   {{> header}}

    <div class="ui middle aligned center aligned grid container">
        <div class="column">
            <h3 class="ui teal image header">
                <div class="content">
                    Signup for posting new blogs
                </div>
            </h3>
            <form action="/signup" method="POST" class="ui large form">
                <div class="ui stacked segment">
                    

                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="userName" placeholder="Enter User Name"/>
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="password" placeholder="Enter Password"/>
                        </div>
                    </div>
                    <input type="submit" class="ui fluid large teal submit button" value="Sign Up">                </div>
            </form>
            {{> footer}}
        </div>
    </div>