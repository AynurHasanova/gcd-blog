{{> header}}

<div class="ui middle aligned left aligned grid container">

    <div class="column">
      <h3 class="ui teal image header">
          <div class="ui middle aligned center aligned grid container">
              Ten most recent blogs
          </div>
      </h3>
    {{#if errorMsg }}
            <p>{{{errorMsg}}}</p>
    {{else}}
    <div class="ui middle aligned divided list">
            {{#each blogs}}
            <div class="item">
                <i class="newspaper outline icon"></i>
                <div class="content">
                    <a class="header" href="/blogs/{{this._id}}">{{this.title}} </a>
                </div>
            </div>
            {{/each}}
    </div>
    {{/if}}
    </div>
</div>
