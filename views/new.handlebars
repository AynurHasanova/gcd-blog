{{#if errorMsg }}
      <p>{{{errorMsg}}}</p>
{{/if}}

{{> header}}

<div class="ui middle aligned center aligned grid container">
 <div class="column">
     <h3 class="ui teal image header">
        <div class="content">
            Create a New Blog Post
        </div>
     </h3>
    <form action="/blogs" method="post" id="usrform" class="ui large form">
       <div class="ui stacked segment">
          <div class="field">
              <div class="ui left icon input">
                  <i class="file outline icon"></i>
                  <input type="text" id="title" name="title" value="{{this.title}}" placeholder="Blog title"/>
              </div>
          </div>
          <div class="field">
            <div class="ui left icon input">
              <textarea id="body" name="body" value="{{this.body}} rows="10" cols="50"" form="usrform" placeholder="Blog content"></textarea>
            </div>
          </div>
          <input type="submit" value="Submit" class="ui fluid large teal submit button">
      </form>
      
      {{> footer}}
  </div>
</div>