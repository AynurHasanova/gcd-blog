<div class="ui middle aligned left aligned grid container">

    <div class="column">
      <h2 class="ui center aligned icon header">
          <img src="/images/favicon.ico" class="image"/>
          <div class="content">
              Blog Detail
          </div>
      </h2>
    {{#if errorMsg }}
            <p>{{{errorMsg}}}</p>
    {{else}}
    <div class="ui middle aligned divided list">
            <div class="item">
                <i class="map marker icon"></i>
                <div class="content">
                    <a class="header" href="/blogs/{{this._id}}">{{blog.title}} </a>
                    <div class="description">{{blog.body}}</div>
                    <div class="right floated content">
                       <div class="ui button"> <a href="/blogs/{{blog._id}}/delete" class="item">Delete</a> </div>
                    </div>
                    <div class="right floated content">
                       <div class="ui button"> <a href="/blogs/{{blog._id}}/edit" class="item">Update</a> </div>
                    </div>
                </div>
            </div>
    </div>
    {{/if}}
      <div class="ui message">
        <i class="file alternate outline icon"></i>
        <a href="/blogs/new">Create a new blog post</a>
      </div>
    </div>
</div>
